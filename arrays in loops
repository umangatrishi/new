#include <iostream>
using namespace std;
int main(){
    int i=0;
    int marks[4]={15,19,18,6};
    for(i=0;i<=3;i++){
        cout<<i<<" position marks "<<marks[i]<<endl;
    }
    
    while(i<=3){
                cout<<i<<" position marks "<<marks[i]<<endl;
                i++;
    }
    do{
        cout<<i<<" position marks "<<marks[i]<<endl;
        i++;
    }
    while(i<4);
    

    return 0;
}
